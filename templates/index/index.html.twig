{% extends 'base.html.twig' %}
{% block title %}Les contributeurs {% endblock %}
{% block body %}
    <div class="container">
        <h1>La liste des contributeurs</h1>
        <div class="row flex">
        {% for contributor in contributors %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title"><a href="{{ path('show_contributor_page',{id:contributor.id}) }}">{{ contributor.login }}</a></h1>
                        <h3 class="card-text"> {{ contributor.pwd }}</h3>
                        <h6 class="text-primary">{{ contributor.isadmin }}</h6>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}